<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Home</title>
</head>
<body>
    <%- include('./partials/nav') %>
        <div class="container mt-3">
            <div class="row row-cols-3">
            <% blogs.forEach(blog => { %>
                <div class="col container mb-2">
                    <div class="card col mt-3" style="width: 18rem ;height: 16rem;">
                        <img src="<%= blog.coverImageURL %>" class="card-img-top">
                        <div class="card-body">
                            <h6 class="card-title"><%= blog.title %></h6>
                            <a href="/blog/<%= blog._id %>" class="btn btn-primary mb-1">View</a>
                        </div>
                    </div>
                </div>
            <% }) %>
            </div>
        </div>
    <%- include('./partials/scripts') %>
</body>
</html>